procedure testCase03 () is

TRES: constant := 3;

-- Declaración de tipo RECORD
type Persona is record
    edad : Integer;
end record;

-- Variables
x : Integer;
y : Boolean;
p : Persona;

-- Procedimiento
procedure MostrarEdad is
begin
    put_line(p.edad);
end MostrarEdad;

-- Función
function Doble(valor : Integer) return Integer is
begin
    return valor * 2;
end Doble;

-- Cuerpo principal
begin
    -- Asignaciones simples
    x := 5;
    y := true;

    -- Asignación de campo en RECORD
    p.edad := 25;

    -- If correcto
    if y then
        x := Doble(p.edad);
    end if;

    -- While correcto
    while x > 10 loop
        x := x - 1;
    end loop;

    -- Llamadas a procedimiento y función
    MostrarEdad;
    put_line(Doble(3));

    -- Error esperado (comentado para no frenar compilación)
    x := true; -- ERROR de tipo: Integer := Boolean
end;

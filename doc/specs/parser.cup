	//Método para la creación de errores semánticos
	public void semanticFatalError(String errorMessage, int line, int column) {
        SemanticError sError = new SemanticError(errorMessage);
        sError.setLine(line);
        sError.setColumn(column);
        semanticErrorManager.semanticFatalError(sError);
    }

    // Método para la búsqueda recursiva de un return válido en las sentencias de un bloque.
    private boolean contieneReturnValido(Sentencia sentencia, TypeIF tipoRetornoEsperado) {
        if (sentencia.getSentenciaReturn() != null) {
            SentenciaReturn sentenciaReturn = sentencia.getSentenciaReturn();
            Expresion expresion = sentenciaReturn.getExpresion();
            if(expresion != null && tipoRetornoEsperado.equals(expresion.getType())){
                // Si la expresión de retorno es del tipo esperado, es un return válido
                return true;
            } else {
                // Si hay una expresión pero no coincide con el tipo esperado, no es válido
                semanticErrorManager.semanticFatalError("Return inválido encontrado. Return inválido encontrado: " + (expresion != null ? expresion.getType() : "null") + ", Tipo de retorno esperado: " + tipoRetornoEsperado.getName());
                return false;
            }
        } else if (sentencia.getSentenciaIf() != null) {
            SentenciaIf ifStmt = sentencia.getSentenciaIf();
            boolean thenTieneReturn = false;
            boolean elseTieneReturn = false;
            if (ifStmt.getCuerpoThen() != null) {
                thenTieneReturn = ifStmt.getCuerpoThen().getSentencias()
                    .stream().anyMatch(s -> contieneReturnValido(s, tipoRetornoEsperado));
            }
            if (ifStmt.getCuerpoElse() != null) {
                elseTieneReturn = ifStmt.getCuerpoElse().getSentencias()
                    .stream().anyMatch(s -> contieneReturnValido(s, tipoRetornoEsperado));
            } else {
                // Si no hay cuerpo else no valoramos su retorno
                elseTieneReturn = true; // Consideramos que no afecta al retorno
            }
            // Solo consideramos válido si ambas ramas tienen return
            return thenTieneReturn && elseTieneReturn;
        } else if (sentencia.getSentenciaWhile() != null) {
            SentenciaWhile whileStmt = sentencia.getSentenciaWhile();
            if (whileStmt.getCuerpo() != null) {
                return whileStmt.getCuerpo().getSentencias()
                    .stream().anyMatch(s -> contieneReturnValido(s, tipoRetornoEsperado));
            }
        }
        return false;
    }
:}	

